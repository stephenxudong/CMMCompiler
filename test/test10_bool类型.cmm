//声明bool变量,并赋值
bool b = true;

//声明bool变量数组
bool boolArray[4];
boolArray[0] = false;  //直接用true或false赋值
boolArray[1] = 3 > 2;  //利用逻辑表达式进行赋值
boolArray[2] = 0;      //利用整数赋值,大于0为true,否则为false
read(boolArray[3]);    //利用read语句赋值

//将bool变量作为判断条件
int index = 0;
while(b){
	if(index > 3)
		b = false;
	else
		write(boolArray[index]);
	index = index + 1;
}

